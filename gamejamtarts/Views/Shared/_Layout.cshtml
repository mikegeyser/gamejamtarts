<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Retro font-->
    <link href='http://fonts.googleapis.com/css?family=Press+Start+2P' rel='stylesheet' type='text/css'>

    <!-- Le styles -->    
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />    
    <style type="text/css">
    body
    {
        padding-top: 60px;
        padding-bottom: 40px;
    }

    .brand, h1, h2
    {
        font-family: 'Press Start 2P', cursive;
        color: #00FF00;
    }

    .navbar .brand, .navbar .nav-collapse.in .nav li > a
    {
        color: #00FF00;
    }

    .hero-unit h1
    {
        color: #00FF00;
    }
    </style>

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <link rel="shortcut icon" href="../assets/ico/favicon.ico">
  </head>

  <body>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            </a>
            <a class="brand" href="@Url.Action("Index", "Home")">
                wits jam tarts
            </a>
            <div class="nav-collapse">
                @{
                    Func<string, string, string, MvcHtmlString> renderLink = (title, action, controller) =>
                    {
                        var active = "";
                        if (string.Equals(controller, ViewContext.Controller.ValueProvider.GetValue("controller").AttemptedValue, StringComparison.OrdinalIgnoreCase)
                                && string.Equals(action, ViewContext.Controller.ValueProvider.GetValue("action").AttemptedValue, StringComparison.OrdinalIgnoreCase))
                            active = "active";

                        MvcHtmlString link = new MvcHtmlString("<li class=\"" + active + "\">"
                                    + Html.ActionLink(title, action, controller)
                                    + "</li>");
                        
                        return link;
                    };
                }                

                <ul class="nav">
                    @renderLink("About", "About", "Home")
                    @renderLink("Games", "Index", "Games")
                </ul>
            </div><!--/.nav-collapse -->
          <div id="logindisplay">
            @Html.Partial("_LogOnPartial")
          </div>
        </div>
      </div>
    </div>

      <div class="container">
           @RenderBody()

          <hr>

          <footer>
              <p>&copy; nothing</p>
          </footer>

      </div> <!-- /container -->

    <!-- Le javascript
    ================================================== -->
      <!-- Placed at the end of the document so the pages load faster -->
    <script src="@Url.Content("~/Scripts/jquery-1.6.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.0.6-development-only.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>
  </body>
</html>
