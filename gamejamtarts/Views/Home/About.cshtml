@model IEnumerable<gamejamtarts.Models.Question>
           
@{ ViewBag.Title = "About Us"; }

<style type="text/css">
    .question { font-weight: bold; }
</style>
<div class="row">
    <div class="span6">
        <h2>When?</h2>
        <ul>
            <li>Sat, 14 April 2012 - 15:00 to 20:00</li>
            <li>Sun, 15 April 2012 - 09:00 to 15:00</li>
        </ul>
        <br />
        <h2>Where?</h2>
        <p>
            Ground Floor, Digital Convent <br />
            Jorrison Street and Station Street <br />
            Braamfontein, <br />
            Gauteng. <br />
        </p>
        <br />
        @{ Html.RenderPartial("Map"); }
    </div>
    <div class="span6">
        <h2>Questions?</h2>
        <ul>
            @foreach (var question in Model)
            {
                <li>
                    <div class="question">@question.Text</div>
                    <div>@question.Answer</div><br />
                </li>
            } 
            
        </ul>
    </div>
</div>

